{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "scripts/**/*.js", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/get-data",
      "dest": "/api/get-data.php"
    },
    {
      "src": "/api/get-image",
      "dest": "/api/get-image.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
